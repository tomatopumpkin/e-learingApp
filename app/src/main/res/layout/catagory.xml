<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/category_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menu"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Android\nCourses"
        android:textColor="#fff"
        android:textSize="45dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_width="350dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#FFE9F9"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/adobe_xd" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/i1"
                    android:letterSpacing="0.03"
                    android:text="Adobe XD\nPrototyping"
                    android:textColor="#305F72"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 hours, 19 lessons"
                    android:layout_toRightOf="@id/i1"
                    android:layout_below="@id/t1"
                    android:textSize="12dp"
                    android:textColor="#F18C8E"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/t1"
                    android:paddingLeft="50dp"
                    android:paddingTop="25dp"
                    android:text="25%"
                    android:textColor="#305F72"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/p1"
                    android:src="@drawable/play_button" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c2"
            android:layout_below="@id/c1"
            android:layout_width="350dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#FFF5E5"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/sketck_icon"/>

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sketch \nPrototyping"
                    android:layout_toRightOf="@id/i2"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:letterSpacing="0.03"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 hours, 19 lessons"
                    android:layout_toRightOf="@id/i2"
                    android:layout_below="@id/t2"
                    android:textSize="12dp"
                    android:textColor="#F18C8E"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_toRightOf="@id/t2"
                    android:paddingLeft="50dp"
                    android:paddingTop="25dp"/>

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/play_button"
                    android:layout_toRightOf="@id/p2"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c3"
            android:layout_below="@id/c2"
            android:layout_width="350dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#FBF5FF"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/after_effect_icon"/>

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="After Effect\nUI Effects"
                    android:layout_toRightOf="@id/i3"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:letterSpacing="0.03"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 hours, 19 lessons"
                    android:layout_toRightOf="@id/i3"
                    android:layout_below="@id/t3"
                    android:textSize="12dp"
                    android:textColor="#F18C8E"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/p3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_toRightOf="@id/t3"
                    android:paddingLeft="50dp"
                    android:paddingTop="25dp"/>

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/play_button"
                    android:layout_toRightOf="@id/p3"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c4"
            android:layout_below="@id/c3"
            android:layout_width="350dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#FFF1EF"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i4"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/figma_icon" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Figma\nEssentials"
                    android:layout_toRightOf="@id/i4"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:letterSpacing="0.03"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 hours, 19 lessons"
                    android:layout_toRightOf="@id/i4"
                    android:layout_below="@id/t4"
                    android:textSize="12dp"
                    android:textColor="#F18C8E"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/p4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_toRightOf="@id/t4"
                    android:paddingLeft="50dp"
                    android:paddingTop="25dp"/>

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/play_button"
                    android:layout_toRightOf="@id/p4"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c5"
            android:layout_below="@id/c4"
            android:layout_width="350dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#EAF9FE"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i5"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/photoshop_icon"/>

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photoshop\nRetouching"
                    android:layout_toRightOf="@id/i5"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:letterSpacing="0.03"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 hours, 19 lessons"
                    android:layout_toRightOf="@id/i5"
                    android:layout_below="@id/t5"
                    android:textSize="12dp"
                    android:textColor="#F18C8E"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/p5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_toRightOf="@id/t5"
                    android:paddingLeft="50dp"
                    android:paddingTop="25dp"/>

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/play_button"
                    android:layout_toRightOf="@id/p5"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>