<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/course_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menu"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/adobe_xd"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Basic"
            android:textSize="45dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Essentials"
            android:textSize="30dp"
            android:textColor="#fff"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/i1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/i1"
            android:text="Mageshkumar"
            android:textColor="#305F72"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author, UI/UX Designer"
            android:textSize="16dp"
            android:textColor="#F18C8E"
            android:layout_below="@id/t1"
            android:layout_toRightOf="@id/i1"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="85dp"
            android:paddingLeft="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours, 20 minutes"
                    android:textSize="16dp"
                    android:textColor="#F18C8E"
                    android:layout_below="@id/tt1"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="18dp"
                    android:textColor="#305F72"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/l1"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/l1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/play_lbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="30dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Design Tools"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours, 20 minutes"
                    android:textSize="16dp"
                    android:textColor="#F18C8E"
                    android:layout_below="@id/tt2"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="18dp"
                    android:textColor="#305F72"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/l2"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/l2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/play_lbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prototyping Tools"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours, 20 minutes"
                    android:textSize="16dp"
                    android:textColor="#F18C8E"
                    android:layout_below="@id/tt3"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="18dp"
                    android:textColor="#305F72"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/l3"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/l3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/play_lbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours, 20 minutes"
                    android:textSize="16dp"
                    android:textColor="#F18C8E"
                    android:layout_below="@id/tt4"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="18dp"
                    android:textColor="#305F72"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/l4"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/l4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/play_lbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conclusion"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours, 20 minutes"
                    android:textSize="16dp"
                    android:textColor="#F18C8E"
                    android:layout_below="@id/tt5"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="18dp"
                    android:textColor="#305F72"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/l5"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/l5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/play_lbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume last lesson"
            android:textColor="#F18C8E"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pink_button_arrow"
            android:layout_marginLeft="70dp"/>

    </LinearLayout>

</LinearLayout>